<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B008B"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".QuoteFragment">

    <TextView
        android:id="@+id/quoteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGoToDetailsFromQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Details"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnBackToStartFromQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Start"
        android:layout_marginTop="16dp" />


</LinearLayout>
